<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-12">
                                <label><strong>Note cliente</strong></label>
                                <textarea rows="3" class="form-control" disabled="disabled">{{tc.current.note}}</textarea>
                            </div>                            
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label><strong>Note magazzino</strong></label>
                                <textarea rows="3" class="form-control" ng-model="tc.current.note_magazzino"></textarea>
                            </div>
                        </div>
                        <div class="margin-b-10"></div>
                        <div class="row">                            
                            <div class="col-sm-2 text-right text-danger">
                                <label><strong>Totale peso</strong></label>
                                <h3 style="font-weight:700;">{{tc.current | totpeso}}</h3>
                            </div>
                            <div class="col-sm-3 text-right text-warning">
                                <label><strong>Imponibile</strong></label>
                                <h3 style="font-weight:700;">{{tc.current | totimponibile | number:2}}</h3>
                            </div>
                            <div class="col-sm-2 text-right">
                                <label><strong>Totale iva</strong></label>
                                <h3 style="font-weight:700;">{{tc.current | totiva | number:2}}</h3>
                            </div>
                            <div class="col-sm-5 text-success text-right">
                                <label><strong>Totale documento</strong></label>
                                <h3 style="font-weight:700;">{{ ((tc.current | totimponibile) + (tc.current | totiva)) | number:2}}</h3>
                            </div>
                        </div>                        
                    </div>
                    <div class="col-sm-6">
                        <div class="row" ng-hide="tc.nuovo">
                            <div class="col-sm-12">
                                <h3>
                                    <span class="label label-info">Ordine {{tc.current.esercizio}} - {{tc.current.id_ordine | trimZeros}}</span>
                                </h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label><strong>Fatturare a</strong></label>
                                <div class="input-group">
                                    <input type="text" class="form-control disabled" ng-model="tc.current.id_cliente" lead-zeros ng-disabled="!tc.nuovo" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" ng-click="cerca_cliente()" ng-disabled="!tc.nuovo"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <label><strong>Cliente</strong></label>
                                <input type="text" class="form-control disabled" ng-model="tc.current.name" disabled="disabled" />
                            </div>
                            <div class="col-md-3">
                                <label><strong>Agente</strong></label>
                                <select ng-model="tc.current.id_agente" class="form-control">
                                    <option value="">Non assegnato</option>
                                    <option ng-repeat="item in selAgenti" value="{{item.id}}">{{item.name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5">
                                <label><strong>Indirizzo</strong></label>
                                <input type="text" class="form-control" ng-model="tc.current.indirizzo" ng-disabled="tc.current.ordine_chiuso" />
                            </div>
                            <div class="col-sm-2">
                                <label><strong>Cap</strong></label>
                                <input type="text" class="form-control" ng-model="tc.current.cap" />
                            </div>
                            <div class="col-sm-3">
                                <label><strong>Comune</strong></label>
                                <input type="text" class="form-control" ng-model="tc.current.comune"/>
                            </div>
                            <div class="col-sm-2">
                                <label><strong>Pr</strong></label>
                                <input type="text" class="form-control" ng-model="tc.current.provincia" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <label><strong>Vettore</strong></label>
                                <select ng-model="tc.current.id_vettore" class="form-control">
                                    <option ng-repeat="item in selVettori" value="{{item.id_vettore}}">{{item.ragione_sociale}}</option>
                                </select>
                            </div>
                            <div class="col-sm-6">
                                <label><strong>Condizioni pagamento</strong></label>
                                <select ng-model="tc.current.id_cond_pag" class="form-control">
                                    <option ng-repeat="item in selCondPag" value="{{item.id_cond_pag}}">{{item.descrizione}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <label><strong>N. colli</strong></label>
                                <input class="form-control text-right" type="number" ng-model="tc.current.colli" style="background-color: #fff79d !important;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
